@using Microsoft.AspNetCore.Identity
@using ASPNetCoreRazorPage_TicketMovie.Models

@inject SignInManager<UserOA> SignInManager
@inject UserManager<UserOA> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle fw-bold text-uppercase" data-bs-toggle="dropdown">
            <span class="highlight">Hi @UserManager.GetUserName(User)</span>
        </a>
        <div class="dropdown-menu bg-light mt-2">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="dropdown-item">Profile</a>
            <a asp-area="Identity" asp-page="/Account/Logout" class="dropdown-item">Logout</a>
        </div>
    </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
