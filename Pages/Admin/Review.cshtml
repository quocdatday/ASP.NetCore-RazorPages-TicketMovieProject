@page
@model ASPNetCoreRazorPage_TicketMovie.Pages.Admin.ReviewModel
@{
}
<div class="container-fluid">
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>UserID</th>
                <th>UserName</th>
                <th>Comment</th>
                <th>Rating</th>
                <th>CreateDate</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Reviews != null && Model.Reviews.Any()){
                foreach(var rev in Model.Reviews){
                    <tr data-id="@rev.REV_ID">
                        <td>@rev.REV_ID</td>
                        <td>@rev.Movie!.Name</td>
                        <td>@rev.UserID</td>
                        <td>@rev.UserID</td>
                        <td>@rev.Comment</td>
                        <td>@rev.Rating</td>
                        <td>@rev.CreatedDate</td>
                        <td>
                            <button type="button"><i class="ti ti-edit"></i></button>
                            <button type="button" onclick="Delete(@rev.REV_ID)"><i class="ti ti-trash"></i></button>
                        </td>
                    </tr>
                }
            }
            else{
                <tr>
                    <td colspan="8" class="text-center">Have no data</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="/Pages/Admin/Shared/_DeletesPartial.cshtml" />
@section Review {
    active
}